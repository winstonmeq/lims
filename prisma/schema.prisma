

// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb" 
}

model Bill {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  billNumber  String   @unique
  description String
  status      String   // e.g., "Introduced", "In Committee", "Passed"
  author      String
  content     String   // Full text of the legislation
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}